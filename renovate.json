{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": ["config:base"],

  "dependencyDashboard": true,
  "prHourlyLimit": 4,
  "prConcurrentLimit": 8,

  "labels": ["dependencies"],

  "packageRules": [
    {
      "managers": ["github-actions"],
      "automerge": true,
      "automergeType": "branch",
      "matchUpdateTypes": ["minor", "patch"]
    },

    {
      "managers": ["terraform"],
      "automerge": false
    },

    {
      "managers": ["npm"],
      "matchUpdateTypes": ["minor", "patch"],
      "automerge": true
    },
    {
      "managers": ["npm"],
      "matchUpdateTypes": ["major"],
      "automerge": false
    }
  ]
}
